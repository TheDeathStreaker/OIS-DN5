h1= title1
each el in master
	p
		if bold == el.CategoryID
				input(onchange="izbran()", type="radio", value=el.CategoryID, name="categories")
				b #{el.CategoryName} (#{el.Description})
		else
			input(onchange="izbran()", type="radio", value=el.CategoryID, name="categories")
			s #{el.CategoryName} (#{el.Description})
		
if detail != null
	h2= title2
	form(id='poslji-obrazec')
		input(id='dodaj' type='button' value='Dodaj' onclick='dodaj()')
		input(id='posodobi' type='button' value='Posodobi' onclick='posodobi()')
		input(id='zbrisi' type='button' value='Zbriši' onclick='zbrisi()')
	table
		thead
			tr
				th
				th Ime
				th Cena
				th Zaloga
				th
		tbody
			p
				each el in detail
					tr
						td
							input(type="radio", id=el.ProductID, name="products")
						td #{el.ProductName}
						td #{el.UnitPrice} €
						td #{el.UnitsInStock}
						td
						
				if add
					tr
						td
						td
							input(id='ime')
						td
							input(id='cena')
						td
							input(id='kolicina')
						td
							input(id='shrani' type='button' value='Shrani' onclick='shrani()')